<div class="row">
  <div class="col-md-3">
    <aside>
      <h4 class="list-group-item active">Cozinhas</h4>
      <div class="list-group table-of-contents">
        <% @cuisines.each do |cuisine| %>
          <%= link_to cuisine.name, cuisine, class: 'list-group-item' %>
        <% end %>
      </div>
    </aside>
  </div>
	<div class="col-md-9">
    <section>
      <h1>Lista das últimas receitas</h1>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Foto</th>
            <th>Receita</th>
            <th>Cozinha</th>
            <th>Tipo de comida</th>
            <th>Nível de dificuldade</th>
            <th>Tempo de preparo</th>
          </tr>
        </thead>
        <tbody>
          <% @recipes.each do |recipe| %>
          <tr>
            <td><%= image_tag recipe.picture.url(:thumb),
              class: 'img-responsive img-thumbnail' %></td>
            <td><%= link_to recipe.name, recipe %></td>
            <td><%= recipe.cuisine.name %></td>
            <td><%= recipe.food_type.name %></td>
            <td><%= recipe.difficulty%></td>
            <td><%= recipe.cooking_time %> min.</td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div><%= link_to 'Voltar', root_path , class: "btn btn-default" %></div>
    </section>
	</div>
</div>
