<header>
  <div class="header">
		<div class="container">
      <div class="header-top">
        <div class="row">
          <div class="col-md-4 col-sm-4">
          </div>
          <div class="col-md-4 col-sm-4">
          </div>
          <div class="col-md-4 col-sm-4">
              <div class="login-md">
                <% if user_signed_in? %>
                  Olá, <strong><%= current_user.email %></strong>
                  - <%= link_to "Sair", destroy_user_session_path, method: :delete %>
                <% elsif  admin_signed_in? %>
                  Olá, <strong><%= current_admin.email %></strong>
                  - <%= link_to "Sair", destroy_admin_session_path, method: :delete %>
                <% else %>
                  <span><%= link_to "Entrar", new_user_session_path %></span> |
                  <span><%= link_to "Área administrativa", new_admin_session_path %></span>
                <% end %>
                <div class="clearfix"></div>
              </div>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
			<div class="row">
				<div class="col-md-4 col-sm-5">
					<%= link_to root_path do %>
						<div class="logo">
              <%= image_tag 'logo.png', class: 'img-responsive' %>
							<h1>Palmirinha</h1>
							<p>A rede social mais gostosa da internet</p>
						</div>
					<% end %>
				</div>
				<div class="col-md-8 col-sm-7">
					<nav class="navbar navbar-default navbar-right" role="navigation">
						<div class="container-fluid">
							<!-- Brand and toggle get grouped for better mobile display -->
							<div class="navbar-header">
								<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
									<span class="sr-only">Alternar navegação</span>
									<span class="icon-bar"></span>
									<span class="icon-bar"></span>
									<span class="icon-bar"></span>
								</button>
							</div>

							<!-- Collect the nav links, forms, and other content for toggling -->
							<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
								<ul class="nav navbar-nav">
									<li>
                    <%= link_to root_path do %>
                      <%= image_tag 'nav-menu/nav1.jpg', class: 'img-responsive' %>
                       Início
                    <% end %>
                  </li>
									<li>
                    <%= link_to recipes_path do %>
                      <%= image_tag 'nav-menu/nav2.jpg', class: 'img-responsive' %>
                      Receitas
                    <% end %>
                  </li>
                  <% if user_signed_in? %>
                    <li>
                      <%= link_to new_recipe_path do %>
                        <%= image_tag 'nav-menu/nav3.jpg', class: 'img-responsive' %>
                        Cadastrar Receita
                      <% end %>
                    </li>
                  <% end %>
                  <% if admin_signed_in? %>
                    <li>
                      <%= link_to new_cuisine_path do %>
                        <%= image_tag 'nav-menu/nav4.jpg', class: 'img-responsive' %>
                        Cadastrar Cozinha
                      <% end %>
                    </li>
                    <li>
                      <%= link_to new_food_type_path do %>
                        <%= image_tag 'nav-menu/nav5.jpg', class: 'img-responsive' %>
                        Cadastrar Tipo
                      <% end %>
                    </li>
                  <% end %>
								</ul>
							</div><!-- /.navbar-collapse -->
						</div><!-- /.container-fluid -->
					</nav>
				</div>
			</div>
		</div> <!-- / .container -->
	</div>
</header>
